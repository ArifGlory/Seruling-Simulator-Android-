<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="glory.serulingsimulator.MainActivity"
    android:background="@drawable/back2"

    >




    <Button
        android:layout_marginTop="130dp"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:text="      MULAI       "
        android:id="@+id/btnMulai"
        android:onClick="btnMulai"
        android:textStyle="bold"

        />
    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@+id/btnMulai"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"

        android:text="PETUNJUK"
        android:textStyle="bold"
        android:id="@+id/btnPetunjuk"
        android:onClick="btnPetunjuk"
        

        />
    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@id/btnPetunjuk"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="TENTANG"
        android:textStyle="bold"

        android:id="@+id/btnTentang"
        android:onClick="btnTentang"


        />
    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@+id/btnTentang"
        android:layout_centerHorizontal="true"
        android:text="KELUAR"
        android:textStyle="bold"

        android:layout_marginTop="10dp"
        android:id="@+id/btnKeluar"
        android:onClick="btnKeluar"
        />

</RelativeLayout>
